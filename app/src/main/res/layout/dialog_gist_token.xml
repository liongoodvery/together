<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/common_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Your GitHub Token"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_title" />

        <ImageView
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_alignParentRight="true"
            android:padding="@dimen/common_padding_small"
            android:src="@drawable/ic_help_outline" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_dialog_token"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:hint="Your Token"
        android:inputType="text"
        android:text="@string/my_gist_token_for_debug" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_not_show_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/not_show_again" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_gist_confirm"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Confirm" />

        <Button
            android:id="@+id/bt_gist_cancel"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>